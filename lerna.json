{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": "chore(release): publish",
      "allowBranch": ["main", "master"],
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.md"
      ]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.md"
      ],
      "message": "chore(release): publish"
    },
    "run": {
      "npmClient": "pnpm"
    }
  }
}