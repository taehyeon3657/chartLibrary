{
  "name": "charts-library",
  "private": true,
  "version": "1.0.0",
  "description": "A modern chart library built with D3.js and React",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:vercel": "pnpm --filter=@charts-library/types --filter=@charts-library/core --filter=@charts-library/charts --filter=@charts-library/react run build && cd apps/playground && pnpm run build",
    "build:deps": "pnpm --filter=@charts-library/types --filter=@charts-library/core --filter=@charts-library/charts --filter=@charts-library/react run build",
    "dev": "pnpm -r --parallel run dev",
    "dev:playground": "cd apps/playground && pnpm run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean",
    "fresh": "pnpm run clean && pnpm install && pnpm run build",
    "bootstrap": "pnpm install && pnpm run build:deps",
    "version": "lerna version --conventional-commits",
    "publish": "pnpm run build && lerna publish from-package",
    "publish:canary": "lerna publish --canary --preid canary --dist-tag canary"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "lerna": "^8.2.4",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taehyeon3657/chartLibrary.git"
  },
  "author": "TaeHyeon",
  "license": "MIT"
}