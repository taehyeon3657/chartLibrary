{
  "name": "charts-library",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build:deps": "lerna run build --scope=@charts-library/types --scope=@charts-library/core",
    "build:vercel": "lerna run build",
    "dev": "lerna run dev --parallel",
    "dev:playground": "lerna run dev --scope=@charts-library/* --scope=playground --parallel",
    "dev:with-deps": "pnpm run build:deps && lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "clean": "lerna run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "lerna run build --scope='@charts-library/*' && changeset publish",
    "fresh": "pnpm run clean && pnpm install && pnpm run build",
    "bootstrap": "pnpm install && pnpm run build:deps"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^20.0.0",
    "lerna": "^8.2.4",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}