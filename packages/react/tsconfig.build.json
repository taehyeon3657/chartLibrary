{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,       // tsc 단독 빌드용
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // JS와 DTS 같이 생성
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
